<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="330dp"
    android:layout_margin="@dimen/marginCommon"
    android:background="@drawable/background_card_small">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glCenterVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tvId"
        style="@style/txtBoldWhiteSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#001" />

    <ImageView
        android:id="@+id/imgHero"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvId"
        tools:src="@color/black" />

    <TextView
        android:id="@+id/tvName"
        style="@style/txtBoldWhiteSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@id/imgHero"
        app:layout_constraintStart_toStartOf="@id/imgHero"
        app:layout_constraintTop_toBottomOf="@id/imgHero"
        tools:text="MANOLO MANOLERO" />

    <View
        android:id="@+id/vCardStats"
        android:layout_width="137dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_stats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvStats"
        style="@style/txtBolBlackSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="STATS"
        app:layout_constraintEnd_toEndOf="@id/vCardStats"
        app:layout_constraintStart_toStartOf="@id/vCardStats"
        app:layout_constraintTop_toTopOf="@id/vCardStats" />

    <TextView
        android:id="@+id/tvIntelligence"
        style="@style/txtStatsSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginTop="12sp"
        android:text="Int:"
        app:layout_constraintStart_toStartOf="@id/vCardStats"
        app:layout_constraintTop_toBottomOf="@id/tvStats" />

    <TextView
        android:id="@+id/tvIntelligenceContent"
        style="@style/txtStatsSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8sp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/tvIntelligence"
        app:layout_constraintEnd_toEndOf="@id/glCenterVertical"
        app:layout_constraintStart_toEndOf="@id/tvIntelligence"
        app:layout_constraintTop_toTopOf="@id/tvIntelligence"
        tools:text="045" />


    <TextView
        android:id="@+id/tvSpeed"
        style="@style/txtStatsSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Spd:"
        app:layout_constraintStart_toStartOf="@id/vCardStats"
        app:layout_constraintTop_toBottomOf="@id/tvIntelligence" />

    <TextView
        android:id="@+id/tvSpeedContent"
        style="@style/txtStatsSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/tvSpeed"
        app:layout_constraintEnd_toEndOf="@id/glCenterVertical"
        app:layout_constraintStart_toEndOf="@id/tvSpeed"
        app:layout_constraintTop_toTopOf="@id/tvSpeed"
        tools:text="085" />

    <TextView
        android:id="@+id/tvDurability"
        style="@style/txtStatsSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Dur:"
        app:layout_constraintStart_toStartOf="@id/vCardStats"
        app:layout_constraintTop_toBottomOf="@id/tvSpeed" />

    <TextView
        android:id="@+id/tvDurabilityContent"
        style="@style/txtStatsSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/tvDurability"
        app:layout_constraintEnd_toEndOf="@id/glCenterVertical"
        app:layout_constraintStart_toEndOf="@id/tvDurability"
        app:layout_constraintTop_toTopOf="@id/tvDurability"
        tools:text="025" />

    <TextView
        android:id="@+id/tvStrength"
        style="@style/txtStatsSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Str:"
        app:layout_constraintStart_toStartOf="@id/glCenterVertical"
        app:layout_constraintTop_toBottomOf="@id/tvStats" />

    <TextView
        android:id="@+id/tvStrengthContent"
        style="@style/txtStatsSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/tvStrength"
        app:layout_constraintEnd_toEndOf="@id/vCardStats"
        app:layout_constraintStart_toEndOf="@id/tvStrength"
        app:layout_constraintTop_toTopOf="@id/tvStrength"
        tools:text="037" />

    <TextView
        android:id="@+id/tvPower"
        style="@style/txtStatsSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Pow:"
        app:layout_constraintStart_toStartOf="@id/glCenterVertical"
        app:layout_constraintTop_toBottomOf="@id/tvStrength" />

    <TextView
        android:id="@+id/tvPowerContent"
        style="@style/txtStatsSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/tvPower"
        app:layout_constraintEnd_toEndOf="@id/vCardStats"
        app:layout_constraintStart_toEndOf="@id/tvPower"
        app:layout_constraintTop_toTopOf="@id/tvPower"
        tools:text="150" />

    <TextView
        android:id="@+id/tvCombat"
        style="@style/txtStatsSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Com:"
        app:layout_constraintStart_toStartOf="@id/glCenterVertical"
        app:layout_constraintTop_toBottomOf="@id/tvPower" />

    <TextView
        android:id="@+id/tvCombatContent"
        style="@style/txtStatsSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/tvCombat"
        app:layout_constraintEnd_toEndOf="@id/vCardStats"
        app:layout_constraintStart_toEndOf="@id/tvCombat"
        app:layout_constraintTop_toTopOf="@id/tvCombat"
        tools:text="086" />


    <TextView
        android:id="@+id/tvAlignment"
        style="@style/txtBoldWhiteSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@id/glCenterVertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vCardStats"
        tools:text="ALIGNMENT" />

    <TextView
        android:id="@+id/tvLines"
        style="@style/txtBoldWhiteSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:ellipsize="none"
        android:maxLines="1"
        android:text="---------------"
        app:layout_constraintBottom_toBottomOf="@id/tvAlignment"
        app:layout_constraintEnd_toStartOf="@id/tvAligmentContent"
        app:layout_constraintStart_toEndOf="@id/tvAlignment"
        app:layout_constraintTop_toTopOf="@id/tvAlignment" />

    <TextView
        android:id="@+id/tvAligmentContent"
        style="@style/txtBoldWhiteSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvAlignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/glCenterVertical"
        app:layout_constraintTop_toTopOf="@id/tvAlignment"
        tools:text="good" />

</androidx.constraintlayout.widget.ConstraintLayout>
