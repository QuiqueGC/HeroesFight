<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.starting_fragment.StartingFragment">

    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fighting_spirit_2_bold"
        android:text="@string/loading"
        android:textSize="64sp"
        android:textColor="@color/txtInfoBoxesColor"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/marginCommon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginCommon"
        android:indeterminateBehavior="repeat"
        android:indeterminateTint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@id/tvLoading"
        app:layout_constraintEnd_toEndOf="@id/tvLoading"
        app:layout_constraintTop_toBottomOf="@id/tvLoading" />

</androidx.constraintlayout.widget.ConstraintLayout>