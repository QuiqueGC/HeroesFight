<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mode_selection_fragment.ModeSelectionFragment">

    <TextView
        android:id="@+id/tvChooseMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fighting_spirit_2_bold"
        android:background="@drawable/background_info_boxes"
        android:text="Choose Mode"
        android:paddingVertical="@dimen/marginCommon"
        android:textSize="80sp"
        android:textColor="@color/txtInfoBoxesColor"
        android:textAlignment="center"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="@dimen/marginCommon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSameDevice"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:text="2P same device"
        android:textColor="@color/txtInfoBoxesColor"
        android:fontFamily="@font/fighting_spirit_2_bold"
        android:textSize="28sp"
        android:layout_marginBottom="@dimen/marginMax"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvChooseMode"
        app:layout_constraintBottom_toTopOf="@id/btnTcpIp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTcpIp"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:text="2P TCP/IP"
        android:textColor="@color/txtInfoBoxesColor"
        android:fontFamily="@font/fighting_spirit_2_bold"
        android:textSize="28sp"
        android:layout_marginBottom="@dimen/marginMax"
        app:layout_constraintTop_toBottomOf="@id/btnSameDevice"
        app:layout_constraintBottom_toTopOf="@id/btnWifiDirect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnWifiDirect"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:text="2P Wifi direct"
        android:textColor="@color/txtInfoBoxesColor"
        android:fontFamily="@font/fighting_spirit_2_bold"
        android:textSize="28sp"
        android:layout_marginBottom="@dimen/marginMax"
        app:layout_constraintTop_toBottomOf="@id/btnTcpIp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>