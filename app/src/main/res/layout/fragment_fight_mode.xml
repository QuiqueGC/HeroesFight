<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.FightModeFragment">


    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ConnectionStatus"
        android:textColor="@color/white"
        android:background="@drawable/background_bio_and_appearance_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnOnOff"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:text="On/Off"
        android:textColor="@color/txtInfoBoxesColor"
        android:fontFamily="@font/fighting_spirit_2_bold"
        android:textSize="28sp"
        android:layout_marginBottom="@dimen/marginMax"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnDiscover"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:text="Discover"
        android:textColor="@color/txtInfoBoxesColor"
        android:fontFamily="@font/fighting_spirit_2_bold"
        android:textSize="28sp"
        android:layout_marginBottom="@dimen/marginMax"
        app:layout_constraintTop_toBottomOf="@id/btnOnOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnDiscover"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>