<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="txtRegular">
        <item name="android:textSize">@dimen/txtCommon</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/fighting_spirit_2</item>
    </style>

    <style name="txtRegularWhite" parent="txtRegular">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/fighting_spirit_2</item>
    </style>

    <style name="txtItemScoreWhite" parent="txtRegularWhite">
        <item name="android:textSize">@dimen/txtItemScore</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txtItemScoreWhiteBold" parent="txtBoldWhite">
        <item name="android:textSize">@dimen/txtItemScore</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txtToFillDataOfHero" parent="txtRegularWhite">
        <item name="android:textSize">@dimen/txtSmall</item>
        <item name="android:fontFamily">@font/fighting_spirit_2_ital</item>
    </style>

    <style name="txtBoldWhite" parent="txtRegular">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/fighting_spirit_2_bold</item>
    </style>

    <style name="txtBoldWhiteSmall" parent="txtRegular">
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/fighting_spirit_2_bold</item>
    </style>

    <style name="txtBoldBlack" parent="txtRegular">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/fighting_spirit_2_bold</item>
    </style>

    <style name="txtBoldBlackSmall" parent="txtRegular">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/fighting_spirit_2_bold</item>
    </style>

    <style name="txtStats">
        <item name="android:textSize">@dimen/txtSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/fighting_spirit_2</item>
    </style>

    <style name="txtStatsSmall">
        <item name="android:textSize">4sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/fighting_spirit_2</item>
    </style>

    <style name="heroInBoardShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cardElevation">50dp</item>
    </style>

    <style name="heroInInitiativeListShapeOverlay">
        <item name="cardElevation">50dp</item>
    </style>

    <style name="fighterInInitiativeList">
        <item name="strokeWidth">8dp</item>
        <item name="android:layout_width">@dimen/imgInitiativeSize</item>
        <item name="android:layout_height">@dimen/imgInitiativeSize</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginHorizontal">@dimen/marginMin</item>
        <item name="shapeAppearanceOverlay">@style/heroInInitiativeListShapeOverlay</item>
    </style>

    <style name="heroInBoardStyle">
        <item name="android:visibility">gone</item>
        <item name="strokeColor">@color/blueGood</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:layout_width">@dimen/tileSize</item>
        <item name="android:layout_height">@dimen/tileSize</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/heroInBoardShapeOverlay</item>
    </style>

    <style name="villainInBoardStyle" parent="heroInBoardStyle">
        <item name="strokeColor">@color/redBad</item>
    </style>

    <style name="tile">
        <item name="android:layout_height">@dimen/tileSize</item>
        <item name="android:layout_width">@dimen/tileSize</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/tile_base2</item>
    </style>

    <style name="rock" parent="tile">
        <item name="android:src">@drawable/obstacle_rock</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">gone</item>
        <item name="android:importantForAccessibility">no</item>
    </style>


    <style name="actionBtn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:fontFamily">@font/fighting_spirit_2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/txtInfoBoxesColor</item>
        <!--        <item name="android:backgroundTint">@color/blueGood</item>-->
    </style>

</resources>